@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if(Model.BuildVersionInfo == null)
{
    <p style="font-weight:bold; color:red;">Build Version Unknow</p>
}
else{
    <p>Datebase Version : 
             @Model.BuildVersionInfo.Major
             @Model.BuildVersionInfo.Minor
             @Model.BuildVersionInfo.Build
          was release on @Model.BuildVersionInfo.ReleaseDate.ToShortDateString()
    </p>
}